<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2P1_T2.View.SecundaryPage">
    
    
    
      <ScrollView>
        <StackLayout>
            
            <Label Text="Nombre: " FontSize="25" Margin="15,22,0,0"/>
            <Entry x:Name="Nombres" 
                   Keyboard="Text"
                   Margin="15,0,15,0"
                   IsEnabled="False"
                   Text="{Binding nombres}"
                   />

            <Label Text="Apellidos: " FontSize="25" Margin="15,22,0,0"/>
            <Entry x:Name="Apellidos" 
                   Keyboard="Text"
                   Margin="15,0,15,0"
                   IsEnabled="False"
                   Text="{Binding apellidos}"
                   />

            <Label Text="Edad: " FontSize="25" Margin="15,22,0,0"/>
            <Entry x:Name="Edad" 
                   Keyboard="Numeric"
                   Margin="15,0,15,0"
                   IsEnabled="False"
                   Text="{Binding edad}"
                   />

            <Label Text="Correo: " FontSize="25" Margin="15,22,0,0"/>
            <Entry x:Name="Correo" 
                   Keyboard="Email"
                   Margin="15,0,15,0"
                   IsEnabled="False"
                   Text="{Binding correo}"
                   />


        </StackLayout>
    </ScrollView>
    
</ContentPage>